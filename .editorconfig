# EditorConfig is awesome: https://EditorConfig.org
root = true

# Top-most EditorConfig file
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript and JavaScript files
[*.{ts,tsx,js,jsx}]
indent_size = 2
indent_style = space

# JSON files
[*.json]
indent_size = 2
indent_style = space

# Markdown files
[*.md]
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_size = 2
indent_style = space

# Package files
[package.json]
indent_size = 2
indent_style = space

# CSS and SCSS files
[*.{css,scss}]
indent_size = 2
indent_style = space

# HTML files
[*.html]
indent_size = 2
indent_style = space

# Configuration files
[*.{config.js,config.ts}]
indent_size = 2
indent_style = space

# Test files
[*.{test.ts,test.tsx,spec.ts,spec.tsx}]
indent_size = 2
indent_style = space

# Storybook files
[*.stories.{ts,tsx}]
indent_size = 2
indent_style = space

# Documentation files
[*.mdx]
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_size = 2
indent_style = space
end_of_line = lf

# Docker files
[Dockerfile]
indent_size = 2
indent_style = space

# Git hooks
[.husky/*]
indent_size = 2
indent_style = space
